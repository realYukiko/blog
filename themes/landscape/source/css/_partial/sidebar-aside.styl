#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  background: #555
  border: 1px solid color-widget-border
  padding: 15px
  border-radius: 3px
  a
    color: #ddd
    display: block
    margin: 10px 0
    font-weight: 300
    text-decoration: none
    transition: color 0.2s
    &:hover
      text-decoration: none
      color: #fff
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc