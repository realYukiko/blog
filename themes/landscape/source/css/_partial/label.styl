
.label-tag-list
  padding: article-padding article-padding 0

.label-tag-list-item
  margin-right: 10px
  display: inline-block

.lebel-tag-list-link
  text-decoration: none
  background: #555
  border-radius: 5px
  padding: 5px 10px
  color: #fff
  &:before
    content: "*"

.label-category
  padding: article-padding article-padding 0

.label-category-item
  margin-right: 10px
  display: inline-block

.label-category-link
  text-decoration: none
  margin-left: 10px
  color: #999
  font-size: 0.8em
  &:before
    content: "["
  &:after
    content: "]"
    